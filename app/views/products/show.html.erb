<div class="row justify-content-center">
  <div class="col-lg-8">
    <%# Product Details Card %>
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Product Details</h2>
      </div>
      <div class="card-body">
        <div class="mb-4">
          <h3 class="card-title"><%= @product.name %></h3>
          <p class="text-muted mb-0">
            <small>
              <i class="bi bi-calendar me-2"></i>Created <%= @product.created_at.strftime("%B %d, %Y") %>
            </small>
          </p>
          <p class="text-muted mb-0">
            <small>
              <i class="bi bi-clock me-2"></i>Updated <%= @product.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
            </small>
          </p>
        </div>

        <%# Action Buttons %>
        <div class="d-flex gap-2 flex-wrap">
          <%= link_to products_path, class: "btn btn-outline-secondary" do %>
            <i class="bi bi-arrow-left me-2"></i>Back to Products
          <% end %>

          <% if authenticated? %>
            <%= link_to edit_product_path(@product), class: "btn btn-primary" do %>
              <i class="bi bi-pencil me-2"></i>Edit Product
            <% end %>

            <%= button_to product_path(@product), method: :delete, class: "btn btn-danger",
                data: { turbo_confirm: "Are you sure you want to delete this product?" } do %>
              <i class="bi bi-trash me-2"></i>Delete Product
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
